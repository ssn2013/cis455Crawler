<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
 <web-app>
     <display-name>HW3 (Worker)</display-name>
     <context-param>
     	<param-name>BDBstore</param-name>
        <param-value>/Users/Adi/Documents/workspace/Indexer/dummy</param-value>
   	 </context-param>
     
     <servlet>
         <servlet-name>WorkerServlet</servlet-name>
         <load-on-startup>1</load-on-startup>
         <servlet-class>edu.upenn.cis455.mapreduce.worker.WorkerServlet</servlet-class>
         <init-param>
           <param-name>storagedir</param-name>
           <param-value>/Users/Adi/Documents/workspace/Indexer/storage</param-value>
         </init-param>
         <init-param>
           <param-name>master</param-name>
           <param-value>127.0.0.1:8080</param-value>
         </init-param>
         <init-param>
           <param-name>port</param-name>
           <param-value>8080</param-value>
         </init-param>
     </servlet>

     <servlet-mapping>
         <servlet-name>WorkerServlet</servlet-name>
         <url-pattern>/*</url-pattern>
     </servlet-mapping>
</web-app>
